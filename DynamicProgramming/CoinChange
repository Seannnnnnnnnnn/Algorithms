/*
   Contains Code for Coin Change problem 
*/
#include <iostream>
#include <cstdlib>

int coin_change(int coins[], int target, int n){
	// performs the coin change problem bottom-up: returns min number of coins to make target
	// coins: denominations in array
	// target: value to reach
	// n: size of coins array
	
	int min_coins[] = {};
	for (int i=0; i<=target;i++){
		min_coins[i] = -1;
	}
	
	for (int v=0; v<=target; v++){
		for (int i=0; i<=n; i++){
			if (coins[i]<=v){
				min_coins[v] = std::min(min_coins[v], 1+min_coins[v-coins[i]]);
			}
		}
	}
	
	return min_coins[target];
}


int main() {
	int coins [] = {1, 5, 6, 9};
	std::cout<<"Min Coins for $13\n"<<coin_change(coins, 13, 4)<<'\n';
}
